<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Camera View for Document Scanning -->
    <androidx.camera.view.PreviewView
        android:id="@+id/cv_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/iv_captured_image" />

    <!-- Flash Toggle Button -->
    <ImageButton
        android:id="@+id/ibtn_flash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Toggle Flash"
        android:src="@drawable/baseline_flash_auto_24"
        app:layout_constraintTop_toTopOf="@id/cv_image"
        app:layout_constraintEnd_toEndOf="@id/cv_image"
        tools:ignore="TouchTargetSizeCheck" />

    <!-- Delete Button -->
    <ImageButton
        android:id="@+id/ibtn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Delete Image"
        android:src="@drawable/baseline_delete_24"
        app:layout_constraintTop_toTopOf="@id/cv_image"
        app:layout_constraintStart_toStartOf="@id/cv_image"
        tools:ignore="TouchTargetSizeCheck" />

    <!-- ImageView for displaying the captured/processed image -->
    <ImageView
        android:id="@+id/iv_captured_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:contentDescription="Captured or Processed Image"
        app:layout_constraintTop_toBottomOf="@+id/cv_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/card_menu"
        android:visibility="gone" />

    <!-- Toolbar for Action Buttons -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp"
        android:layout_margin="8dp">

        <!-- Horizontal LinearLayout for Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center">

            <!-- Gallery Selection Button -->
            <ImageButton
                android:id="@+id/ibtn_galarychoose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:contentDescription="Select from Gallery"
                android:src="@drawable/baseline_collections_24"
                tools:ignore="TouchTargetSizeCheck" />

            <!-- Crop Button -->
            <ImageButton
                android:id="@+id/ibtn_crop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:contentDescription="Crop Image"
                android:src="@drawable/baseline_crop_24"
                tools:ignore="TouchTargetSizeCheck" />

            <!-- Camera Capture Button (FloatingActionButton) - Main Action -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fbtn_doccam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_photo_camera_24"
                android:contentDescription="Capture Document"
                android:layout_marginEnd="10dp" />

            <!-- Rotate Button -->
            <ImageButton
                android:id="@+id/ibtn_rotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:contentDescription="Rotate Image"
                android:src="@drawable/baseline_rotate_90_degrees_cw_24"
                tools:ignore="TouchTargetSizeCheck" />

            <!-- Save as PDF Button -->
            <ImageButton
                android:id="@+id/ibtn_pdfsave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:contentDescription="Save as PDF"
                android:src="@drawable/baseline_picture_as_pdf_24"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
