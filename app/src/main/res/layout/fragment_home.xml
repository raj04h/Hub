<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll_dashboard"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Calculation Title -->
        <TextView
            android:id="@+id/textview_calculation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Calculation"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Calculation CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_calculation_tool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintTop_toBottomOf="@id/textview_calculation_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <GridLayout
                android:id="@+id/gridlayout_calculation_tool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:padding="10dp"
                android:rowCount="3">

                <!-- Calculator -->
                <Button
                    android:id="@+id/button_calculator"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#4CAF50"
                    android:text="Calci"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <!-- BMI Calculator -->
                <Button
                    android:id="@+id/button_bmi_calculator"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#FF5722"
                    android:text="BMI Calci"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <!-- Currency Converter -->
                <Button
                    android:id="@+id/button_currency_converter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#2196F3"
                    android:text="Currency"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <!-- Time Calculator -->
                <Button
                    android:id="@+id/button_time_calculator"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#9C27B0"
                    android:text="Time Calcu"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <!-- Stock Calculator -->
                <Button
                    android:id="@+id/button_stock_calculator"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#F44336"
                    android:text="Stock cal"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <!-- More -->
                <Button
                    android:id="@+id/button_calimore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#F44336"
                    android:text="More"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </GridLayout>
        </androidx.cardview.widget.CardView>

        <!-- Updates Title -->
        <TextView
            android:id="@+id/textview_updates_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Updates"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview_calculation_tool" />

        <!-- Updates CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_updates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintTop_toBottomOf="@id/textview_updates_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <GridLayout
                android:id="@+id/gridlayout_updates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:padding="10dp"
                android:rowCount="2">

                <!-- News -->
                <Button
                    android:id="@+id/button_news"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#4CAF50"
                    android:text="News"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <!-- Market Index -->
                <Button
                    android:id="@+id/button_market_index"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#FF5722"
                    android:text="Market"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <!-- Sports -->
                <Button
                    android:id="@+id/button_sports"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#2196F3"
                    android:text="Sports"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <!-- Technology -->
                <Button
                    android:id="@+id/button_technology"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#9C27B0"
                    android:text="Tech"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </GridLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
