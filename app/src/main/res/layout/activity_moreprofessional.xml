<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.Professional.TextScanTutorialActivity">

    <!-- ImageView to display the captured image -->
    <ImageView
        android:id="@+id/iv_scan"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="5dp"
        android:background="#E0E0E0"
        android:contentDescription="Captured Image"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"/>

    <!-- CardView displaying the main content with ScrollView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/iv_scan"
        app:layout_constraintBottom_toTopOf="@id/constraintbottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <!-- ScrollView wrapping the TextView -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <!-- Recognized Text Display -->
            <TextView
                android:id="@+id/tv_scannedtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Recognized Text Will Appear Here"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:padding="10dp"
                android:gravity="top|start"
                android:background="#ffffff"
                android:backgroundTint="#DCF6D6"/>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- ProgressBar for scanning feedback -->
    <ProgressBar
        android:id="@+id/pb_scanned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/constraintbottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <!-- Bottom layout with buttons and text descriptions -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8DADB1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Rescan button -->
        <ImageButton
            android:id="@+id/ibtn_rescan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:contentDescription="image search"
            android:src="@drawable/baseline_image_search_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Scan button -->
        <ImageButton
            android:id="@+id/ibtn_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:contentDescription="Scan"
            android:src="@drawable/baseline_document_scanner_24"
            app:layout_constraintEnd_toStartOf="@id/ibtn_copy"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/ibtn_rescan"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Copy button -->
        <ImageButton
            android:id="@+id/ibtn_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:contentDescription="Copy"
            android:src="@drawable/baseline_content_copy_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Rescan text -->
        <TextView
            android:id="@+id/tv_rescan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            app:layout_constraintTop_toBottomOf="@id/ibtn_rescan"
            app:layout_constraintStart_toStartOf="@id/ibtn_rescan"
            app:layout_constraintEnd_toEndOf="@id/ibtn_rescan" />

        <!-- Scan text -->
        <TextView
            android:id="@+id/tv_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan"
            app:layout_constraintTop_toBottomOf="@id/ibtn_scan"
            app:layout_constraintStart_toStartOf="@id/ibtn_scan"
            app:layout_constraintEnd_toEndOf="@id/ibtn_scan" />

        <!-- Copy text -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy"
            app:layout_constraintTop_toBottomOf="@id/ibtn_copy"
            app:layout_constraintStart_toStartOf="@id/ibtn_copy"
            app:layout_constraintEnd_toEndOf="@id/ibtn_copy" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
